@{
    var title = ViewData["Title"] ?? "Employee System";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            /* Light mode variables */
            --color-bg: #f8f9fb;
            --color-card: #ffffff;
            --color-text: #212529;
            --color-nav: linear-gradient(90deg, #004aad, #007bff);
            --color-primary: #007bff;
            --color-border: #dee2e6;
            --color-accent: #007bff;
            --glow-shadow: none;
        }

        body.dark-mode {
            /* Dark mode variables */
            --color-bg: #0f1116;
            --color-card: #16191f;
            --color-text: #f1f1f1;
            --color-nav: linear-gradient(90deg, #0d0d0d, #1c1c1c);
            --color-primary: #0dcaf0;
            --color-border: #333;
            --color-accent: #00bfff;
            --glow-shadow: 0 0 12px rgba(0, 191, 255, 0.4);
        }

        body {
            background-color: var(--color-bg);
            color: var(--color-text);
            font-family: 'Segoe UI', sans-serif;
            transition: background-color 0.4s ease, color 0.4s ease;
        }

        .navbar-custom {
            background: var(--color-nav);
            color: #fff;
            text-align: center;
            box-shadow: var(--glow-shadow);
            transition: all 0.4s ease;
        }

            .navbar-custom .navbar-brand {
                color: #fff !important;
                font-size: 1.6rem;
                font-weight: 600;
                letter-spacing: 0.5px;
                margin: auto;
            }

        .toggle-darkmode {
            position: absolute;
            right: 20px;
            top: 10px;
            cursor: pointer;
            border: none;
            background: none;
            color: #fff;
            font-size: 1.4rem;
            transition: transform 0.3s ease, color 0.3s ease;
        }

            .toggle-darkmode:hover {
                transform: scale(1.2);
                color: var(--color-accent);
            }

        .card {
            background-color: var(--color-card);
            border: 1px solid var(--color-border);
            box-shadow: var(--glow-shadow);
            transition: background-color 0.4s ease, box-shadow 0.4s ease;
        }

        .btn-primary {
            background-color: var(--color-primary);
            border: none;
            box-shadow: var(--glow-shadow);
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn-primary:hover {
                background-color: var(--color-accent);
                box-shadow: 0 0 8px var(--color-accent);
            }

        .btn-outline-light:hover {
            background-color: var(--color-accent);
            color: #000;
        }

        .fade-in {
            animation: fadeIn 0.6s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body class="fade-in">

    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom mb-4 position-relative">
        <div class="container-fluid justify-content-center">
            <h1 class="navbar-brand mb-0 text-center">Employee Verification System</h1>
            <button id="darkModeToggle" class="toggle-darkmode" title="Toggle dark mode">
                🌙
            </button>
        </div>
    </nav>

    <div class="container mb-5">
        @RenderBody()
    </div>

    <!-- Firebase Web SDK -->
    <script type="module">
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/11.0.1/firebase-app.js';
        import { getAuth, signInWithEmailAndPassword, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/11.0.1/firebase-auth.js';
        import { getFirestore, collection, addDoc, serverTimestamp } from 'https://www.gstatic.com/firebasejs/11.0.1/firebase-firestore.js';
        import { getStorage, ref as storageRef, uploadBytes, getDownloadURL } from 'https://www.gstatic.com/firebasejs/11.0.1/firebase-storage.js';
        import { getAnalytics } from 'https://www.gstatic.com/firebasejs/11.0.1/firebase-analytics.js';

        const firebaseConfig = {
            apiKey: "AIzaSyDF5FDfaFE965FMIy_gVts6NdPv8UPPJe4",
            authDomain: "employeesystem-692ce.firebaseapp.com",
            projectId: "employeesystem-692ce",
            storageBucket: "employeesystem-692ce.firebasestorage.app",
            messagingSenderId: "544980882489",
            appId: "1:544980882489:web:ec5856d8517aeec0a569e8",
            measurementId: "G-RLJ2BBTRZC"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
