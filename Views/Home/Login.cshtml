@{
    ViewData["Title"] = "Employee Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card p-4 shadow mx-auto mt-5" style="max-width:420px;">
    <h3 class="text-center mb-4 text-primary fw-bold">Employee Login</h3>
    <form id="loginForm" novalidate>
        <div class="mb-3">
            <label class="form-label">Employee Number</label>
            <input id="employeeNumber" class="form-control" placeholder="Enter your employee number" />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input id="password" type="password" class="form-control" placeholder="Enter your password" />
        </div>
        <button id="loginBtn" type="submit" class="btn btn-primary w-100 mt-2">Login</button>
    </form>

    <div id="loginMsg" class="mt-3 text-danger text-center small"></div>

    <div class="mt-3 text-center">
        <a href="/Admin/Login" class="text-decoration-none">Login as Admin</a>
    </div>
</div>

@section Scripts {
    <script src="/js/login.js"></script>
}
