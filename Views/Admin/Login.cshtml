@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #f2f4f7;
    }
</style>

<div class="card p-4 shadow mx-auto mt-5" style="max-width:420px;">
    <h3 class="text-center mb-4 text-dark fw-bold">Admin Login</h3>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input id="adminEmail" class="form-control" placeholder="admin@stud.cut.ac.za" />
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input id="adminPassword" type="password" class="form-control" placeholder="Enter your password" />
    </div>
    <button id="adminLoginBtn" class="btn btn-dark w-100 mt-2">Login</button>

    <div id="adminLoginMsg" class="mt-3 text-danger text-center small"></div>

    <div class="mt-3 text-center">
        <a href="/" class="text-decoration-none">Login as Employee</a>
    </div>
</div>

@section Scripts {
    <script src="/js/admin-login.js"></script>
}
